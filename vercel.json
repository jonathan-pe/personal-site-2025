{
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/chat.ts": {
      "maxDuration": 30,
      "runtime": "nodejs20.x"
    },
    "api/health.ts": {
      "maxDuration": 10,
      "runtime": "nodejs20.x"
    },
    "api/chat-test.ts": {
      "maxDuration": 10,
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
